<header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <%= link_to "りもーとレッスン♪", root_path, class: "navbar-brand" %>
    <button class="navbar-toggler" type="button"
        data-toggle="collapse"
        data-target="#navmenu1"
        aria-controls="navmenu1"
        aria-expanded="false"
        aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse justify-content-end" id="navmenu1">
        <div class="navbar-nav">
         <%= link_to "ホーム", root_path, class: "nav-item nav-link" %>
         <%= link_to 'レッスン一覧', lessons_path, class: 'nav-link' %>
         <% if user_signed_in? %>
            <%= link_to 'マイページ', user_path(current_user.id), class: 'nav-link' %>
            <%= link_to 'アカウント編集', edit_user_registration_path, class: 'nav-link' %>
            <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: 'nav-link' %>
        <% else %>
            <% if teacher_signed_in? %>
                <%= link_to '講師マイページ', teacher_path(current_teacher.id), class: 'nav-link' %>
                <%= link_to 'アカウント編集', edit_teacher_registration_path, class: 'nav-link' %>
                <%= link_to 'ログアウト', destroy_teacher_session_path, method: :delete, class: 'nav-link' %>
            <% else %>
                <%= link_to "講師ログイン", new_teacher_session_path, class: 'nav-link' %>
                <%= link_to "講師登録", new_teacher_registration_path, class: 'nav-link' %>
                <%= link_to "ログイン", new_user_session_path, class: 'nav-link' %>
                <%= link_to "会員登録", new_user_registration_path, class: 'nav-link' %>        
            <% end %>
        <% end %>
        </div>
    </div>
    </nav>
